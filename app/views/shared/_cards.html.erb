  <div class="content">
    <div class="cards">
        <% @markets.each do |market| %>
          <div class="card-custom">
            <div class="additional" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= market.img %>')">
              <div class="more-info">
                <h2><%= market.name %></h2>
                <div class="coords">
                  <span><%= market.street %></span>
                  <span><%= market.postal_code %>
                    <%= market.city %></span>
                </div>
                <div class="stats">
                  <div>
                    <div class="title">Merchants</div>
                    <i class="fas fa-store"></i>
                    <div class="value"><%= market.vendors %></div>
                  </div>
                  <div>
                    <div class="title">Reviews</div>
                    <i class="far fa-star"></i>
                    <div class="value">9</div>
                  </div>
                </div>
              </div>
            </div>
            <div class="general">
              <h2><%= market.name %></h2>
              <div class="tags">
                <span class="bio <%= "invisible" if market.bio == false%>"><%= "biologique" if market.bio == true%></span>
                <span class="night<%= "invisible" if market.night == false%>"><%= "du soir" if market.night == true%></span>
              </div>
              <div class="day">
                <span class="monday <%= "open" if market.open_on[0] %>">lun</span>
                <span class="tuesday <%= "open" if market.open_on[1] %>">mar</span>
                <span class="wednedsday <%= "open" if market.open_on[2] %>">mer</span>
                <span class="thursday <%= "open" if market.open_on[3] %>">jeu</span>
                <span class="friday <%= "open" if market.open_on[4] %>">ven</span>
                <span class="saturday <%= "open" if market.open_on[5] %>">sam</span>
                <span class="sunday <%= "open" if market.open_on[6] %>">dim</span>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  <img id="map" src='https://raw.githubusercontent.com/lewagon/layouts-demo/gh-pages/images/mapbox.png'>
</div>
